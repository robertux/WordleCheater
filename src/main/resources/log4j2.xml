<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
  	<Logger name="org.robertux.wordleCheater.Main" level="TRACE"/>
  	<Logger name="org.robertux.wordleCheater.WordFinder" level="TRACE"/>
  	<Logger name="org.robertux.wordleCheater.WordFinderTest" level="TRACE"/>
    <Root level="WARN">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>